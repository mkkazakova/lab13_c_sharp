<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppForMobile.PricePage" Title="Информация о ценах">
    <StackLayout>
        <Label Text="Тариф" />
        <Label Text="{Binding TariffId}" />
        <Label Text="Наличие IP адресса" />
        <Entry Text="{Binding IPaddress}" />
        <Label Text="Цена" />
        <Entry Text="{Binding Price}" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Сохранить" Clicked="SavePrice" />
        </StackLayout>
    </StackLayout>
</ContentPage>