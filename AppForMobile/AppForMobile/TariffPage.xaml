<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppForMobile.TariffPage" Title="Информация о тарифе">
    <StackLayout>
        <Label Text="Id" />
        <Label Text="{Binding Id}" />
        <Label Text="Скорость" />
        <Entry Text="{Binding InternetSpeed}" />
        <Label Text="Мб" />
        <Entry Text="{Binding MaxValume}" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Сохранить" Clicked="SaveTariff" />
            <Button Text="Удалить" Clicked="DeleteTariff" />
        </StackLayout>
    </StackLayout>
</ContentPage>